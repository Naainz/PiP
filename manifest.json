{
    "manifest_version": 3,
    "name": "PiPifier",
    "version": "1.0",
    "description": "Enables Picture-in-Picture mode for supported sites.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions" : [
        "https://*.youtube.com/*",
        "https://*.disneyplus.com/*",
        "https://*.netflix.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    }
  }
  